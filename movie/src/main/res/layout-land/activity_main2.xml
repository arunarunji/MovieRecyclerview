<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.MainActivity2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vikramjpg"
    android:gravity="center"
    android:padding="16dp"
    >

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="10dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.008207934" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="170dp" />

    <ImageView
android:layout_marginTop="3dp"
        android:id="@+id/whatsapp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/whatsapp"
app:layout_constraintTop_toBottomOf="@id/a_des"
        app:layout_constraintStart_toStartOf="@id/a_des"/>


    <ImageView
        android:id="@+id/instagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/instagram"
        app:layout_constraintStart_toStartOf="@id/whatsapp"
        app:layout_constraintTop_toTopOf="@id/whatsapp"
        android:layout_marginStart="60dp"/>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook"
       app:layout_constraintStart_toStartOf="@id/linkedin"
        app:layout_constraintBottom_toBottomOf="@id/linkedin"
        app:layout_constraintStart_toEndOf="@id/linkedin"
        android:layout_marginStart="60dp"/>

    <ImageView
        android:id="@+id/linkedin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/linkedin"
        app:layout_constraintTop_toTopOf="@id/instagram"
        app:layout_constraintBottom_toBottomOf="@id/instagram"
        app:layout_constraintStart_toStartOf="@id/instagram"
        android:layout_marginStart="60dp"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/share"
       app:layout_constraintStart_toStartOf="@id/ratenow"
        app:layout_constraintBottom_toTopOf="@id/ratenow"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:background="#333333"
        android:padding="5dp"
        android:text="@string/add_your_rating_review_your_ratings_matter"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/a_des"
        app:layout_constraintEnd_toEndOf="@id/a_des"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart"
        app:layout_constraintTop_toBottomOf="@id/genre"
        app:layout_constraintStart_toStartOf="@id/genre"
         />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
app:layout_constraintBottom_toBottomOf="@id/heart"        app:layout_constraintStart_toEndOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/heart"
        android:layout_marginBottom="5dp"
        tools:text="98" />

    <TextView
app:layout_constraintTop_toTopOf="@id/percent"
        app:layout_constraintBottom_toBottomOf="@id/percent"
        app:layout_constraintStart_toEndOf="@id/percent"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"

        tools:layout_editor_absoluteX="430dp"
        tools:layout_editor_absoluteY="88dp" />

    <ImageView
        android:id="@+id/a_image"
        android:layout_width="200dp"
        android:layout_height="183dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/guideline1"
/>


    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blueBlack"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/a_title"
        app:layout_constraintStart_toEndOf="@id/a_image"
        android:layout_marginStart="30dp"
        tools:text="Action,Thriller" />

    <TextView
        android:id="@+id/a_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title1"
        android:textColor="@color/blueBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/a_image"
       app:layout_constraintTop_toTopOf="@id/guideline4"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description1"
        android:textColor="@color/tanAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/a_des"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@color/blueBlack"
        android:text="@string/description"
        android:textColor="@color/tanAccent"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="@id/description"
        android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="189dp" />

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/a_like"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:contentDescription="@string/description1"
        android:src="@drawable/like"
        tools:layout_editor_absoluteX="562dp"
        tools:layout_editor_absoluteY="200dp" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toTopOf="@id/a_like"
        app:layout_constraintStart_toStartOf="@id/a_like"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bookTicket"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:background="#FF0000"
        android:backgroundTint="#ff0000"
        android:padding="5dp"
        android:text="@string/book_ticket"
        android:textAllCaps="false"
        android:textColor="@color/white"
         />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintStart_toStartOf="@id/bookTicket"
        android:id="@+id/ratenow"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:background="#333333"
        android:padding="5dp"
        android:text="@string/rate_now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bookTicket"
        app:layout_constraintBottom_toTopOf="@id/bookTicket"
       android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tanAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/a_like"
        app:layout_constraintStart_toEndOf="@id/a_like"

        tools:text="12" />


    <ImageView
        android:id="@+id/a_dislike"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:src="@drawable/dislike"
        app:layout_constraintStart_toStartOf="@id/a_like"
        app:layout_constraintTop_toBottomOf="@id/a_like"

        tools:layout_editor_absoluteX="561dp"
        tools:layout_editor_absoluteY="283dp" />

    <TextView
        android:id="@+id/textdislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tanAccent"
        android:textSize="20sp"
        android:textStyle="bold"

app:layout_constraintStart_toEndOf="@id/a_dislike"
        app:layout_constraintBottom_toBottomOf="@id/a_dislike"
        tools:text="12" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>